{
  "name": "sunflower_stats",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start-pm2": "pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --optimize_for_size\" --name stats --kill-timeout 30000 --log-date-format 'MM-DD HH:mm:ss'",
    "start-pm2j": "export LD_PRELOAD=$LD_PRELOAD:/usr/lib/aarch64-linux-gnu/libjemalloc.so && pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --optimize_for_size\" --name stats --kill-timeout 30000 --log-date-format 'MM-DD HH:mm:ss'",
    "start-forever": "export NODE_ENV='production' && forever start -c 'node --expose-gc --optimize_for_size' build/index.js",
    "start-foreverj": "NODE_ENV='production' && forever start -c 'LD_PRELOAD=$LD_PRELOAD:/usr/lib/aarch64-linux-gnu/libjemalloc.so node --expose-gc --optimize_for_size' build/index.js",
    "bun-dev": "bun --watch src/index.ts",
    "start-node": "pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --no-compilation-cache --optimize_for_size\" --name stats --kill-timeout 30000 --log-date-format 'MM-DD HH:mm:ss'",
    "start-node-i": "pm2 start build/index.js --node-args=\"--expose-gc --inspect --no-compilation-cache --optimize_for_size\" --name stats --kill-timeout 30000 --log-date-format 'MM-DD HH:mm:ss'",
    "compile": "tsc",
    "dev": "DEV=true bun --watch src/index.ts"
  },
  "author": {
    "name": "Vlad Pavlenko",
    "url": "https://github.com/pvlvld/"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/menu": "^1.2.1",
    "@grammyjs/parse-mode": "^1.9.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@roziscoding/grammy-autoquote": "^2.0.6",
    "better-sqlite3": "^9.5.0",
    "big-js": "^3.1.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "grammy": "^1.22.4",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.2.0",
    "moment": "^2.30.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.5",
    "pg-promise": "^11.6.0",
    "pm2": "^5.3.1"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.6.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/big.js": "^6.2.2",
    "@types/bun": "^1.0.12",
    "@types/dotenv": "^8.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.7",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.5",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  }
}
