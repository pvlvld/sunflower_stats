{
  "name": "sunflower_stats",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start": "pm2 start src/index.ts --name stats --kill-timeout 30000",
    "start-forever": "export NODE_ENV='production' && forever start -c 'node --expose-gc --optimize_for_size --max_old_space_size=1024 --memory-balancer' build/index.js",
    "bun": "bun --watch src/index.ts",
    "node": "pm2 start build/index.js --node-args=\"--expose-gc --memory-balancer --no-compilation-cache --optimize_for_size --max_old_space_size=1024\" --name stats --kill-timeout 30000 --log-date-format 'MM-DD HH:mm:ss'",
    "node-i": "pm2 start build/index.js --node-args=\"--expose-gc --inspect --memory-balancer --no-compilation-cache --optimize_for_size --max_old_space_size=1024\" --name stats --kill-timeout 30000 --log-date-format 'MM-DD HH:mm:ss'",
    "compile": "tsc",
    "dev": "DEV=true bun --watch src/index.ts"
  },
  "author": {
    "name": "Vlad Pavlenko",
    "url": "https://github.com/pvlvld/"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/menu": "^1.2.1",
    "@grammyjs/parse-mode": "^1.9.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@roziscoding/grammy-autoquote": "^1.1.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.1",
    "grammy": "^1.21.1",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.2.0",
    "moment": "^2.30.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "pm2": "^5.3.1"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.5.2",
    "@types/big.js": "^6.2.2",
    "@types/bun": "^1.0.6",
    "@types/dotenv": "^8.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.2"
  }
}
