{
    "name": "sunflower_stats",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "type": "module",
    "scripts": {
        "build": "npx tsc -b",
        "start-pm2": "pm2 start ecosystem.config.js",
        "start:bot": "pm2 start ecosystem.config.js --only stats_bot",
        "start:chart_service": "pm2 start ecosystem.config.js --only stats_chart_service",
        "start-pm2j": "export NODE_ENV='production' && export LD_PRELOAD=$LD_PRELOAD:/usr/lib/aarch64-linux-gnu/libjemalloc.so && pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
        "start-forever": "export NODE_ENV='production' && forever start -c 'node --expose-gc --optimize_for_size' build/index.js",
        "start-foreverj": "NODE_ENV='production' && forever start -c 'LD_PRELOAD=$LD_PRELOAD:/usr/lib/aarch64-linux-gnu/libjemalloc.so node --expose-gc --optimize_for_size' build/index.js",
        "bun-dev": "bun --watch src/index.ts",
        "start-node": "export NODE_ENV='production' && pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --no-compilation-cache --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
        "start-node-i": "export NODE_ENV='production' && pm2 start build/index.js --node-args=\"--expose-gc --inspect --no-compilation-cache --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
        "compile": "tsc",
        "dev": "DEV=true bun --watch src/index.ts",
        "format": "prettier --write \"packages/**/*.ts\"",
        "prepare": "husky"
    },
    "author": {
        "name": "Vlad Pavlenko",
        "url": "https://github.com/pvlvld/"
    },
    "license": "UNLICENSED",
    "dependencies": {
        "@cacheable/node-cache": "^1.5.6",
        "@grammyjs/auto-retry": "^2.0.2",
        "@grammyjs/files": "^1.1.1",
        "@grammyjs/i18n": "^1.1.2",
        "@grammyjs/menu": "^1.3.0",
        "@grammyjs/parse-mode": "^1.11.1",
        "@grammyjs/ratelimiter": "^1.2.1",
        "@grammyjs/runner": "^2.0.3",
        "@mtcute/node": "^0.24.3",
        "@roziscoding/grammy-autoquote": "^2.0.9",
        "@sunflower-stats/shared": "^0.1.0",
        "@types/amqplib": "^0.10.7",
        "amqplib": "^0.10.8",
        "big-js": "^3.1.3",
        "canvas": "^3.1.1",
        "chart.js": "^4.5.0",
        "deepool": "^3.0.1",
        "dotenv": "^16.5.0",
        "fastify": "^5.4.0",
        "fluent-ffmpeg": "^2.1.3",
        "grammy": "^1.36.3",
        "husky": "^9.1.7",
        "ioredis": "^5.6.1",
        "lru-cache": "^11.1.0",
        "moment": "^2.30.1",
        "mysql2": "^3.14.1",
        "node-cron": "^4.2.0",
        "pg": "^8.16.2",
        "postgres": "^3.4.7"
    },
    "devDependencies": {
        "@grammyjs/types": "^3.20.0",
        "@types/big.js": "^6.2.2",
        "@types/bun": "^1.2.17",
        "@types/fluent-ffmpeg": "^2.1.27",
        "@types/node": "^24.0.3",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.15.4",
        "prettier": "^3.6.2",
        "typescript": "^5.9.0-beta"
    },
    "overrides": {
        "canvas": {
            "@mapbox/node-pre-gyp": "2.0.1"
        }
    }
}
