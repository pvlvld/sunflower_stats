{
  "name": "sunflower_stats",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start-pm2": "pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
    "start-pm2j": "export LD_PRELOAD=$LD_PRELOAD:/usr/lib/aarch64-linux-gnu/libjemalloc.so && pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
    "start-forever": "export NODE_ENV='production' && forever start -c 'node --expose-gc --optimize_for_size' build/index.js",
    "start-foreverj": "NODE_ENV='production' && forever start -c 'LD_PRELOAD=$LD_PRELOAD:/usr/lib/aarch64-linux-gnu/libjemalloc.so node --expose-gc --optimize_for_size' build/index.js",
    "bun-dev": "bun --watch src/index.ts",
    "start-node": "pm2 start build/index.js --no-pmx --node-args=\"--expose-gc --no-compilation-cache --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
    "start-node-i": "pm2 start build/index.js --node-args=\"--expose-gc --inspect --no-compilation-cache --optimize_for_size\" --name stats --kill-timeout 60000 --log-date-format 'MM-DD HH:mm:ss'",
    "compile": "tsc",
    "dev": "DEV=true bun --watch src/index.ts"
  },
  "author": {
    "name": "Vlad Pavlenko",
    "url": "https://github.com/pvlvld/"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.1",
    "@grammyjs/files": "^1.1.0",
    "@grammyjs/menu": "^1.2.1",
    "@grammyjs/parse-mode": "^1.10.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@roziscoding/grammy-autoquote": "^2.0.6",
    "better-sqlite3": "^10.0.0",
    "big-js": "^3.1.3",
    "canvas": "^2.11.2",
    "chart.js": "^4.4.3",
    "deepool": "^3.0.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "grammy": "1.21.2",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.2.2",
    "moment": "^2.30.1",
    "mysql2": "^3.9.8",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.5",
    "pm2": "^5.4.0"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.7.0",
    "@types/better-sqlite3": "^7.6.10",
    "@types/big.js": "^6.2.2",
    "@types/bun": "^1.1.2",
    "@types/dotenv": "^8.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.12",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "canvas": {
      "@mapbox/node-pre-gyp": "1.0.11"
    }
  }
}
